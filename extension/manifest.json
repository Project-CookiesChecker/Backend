{
  "manifest_version": 3,
  "name": "CookiesChecker",
  "version": "1.0",
  "permissions": [
    "cookies",
    "storage",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://127.0.0.1:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon_About.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://127.0.0.1:5000"
  }
}